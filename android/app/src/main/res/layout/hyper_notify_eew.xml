<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="14dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 級地震"
                android:textColor="#e7000b"
                android:textSize="24sp"
                android:textFontWeight="700" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距離你114514km"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginRight="12dp">

            <ProgressBar
                android:id="@+id/circular_countdown_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="100"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_indicator"

                android:rotation="-90"/>

            <TextView
                android:id="@+id/circular_countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>